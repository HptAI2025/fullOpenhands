# OpenHands Environment Configuration
# Copy this file to .env and fill in your API keys

# LLM Configuration - Add your API keys here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Runtime Configuration
RUNTIME=local
SANDBOX_RUNTIME_CONTAINER_IMAGE=ghcr.io/all-hands-ai/runtime:0.50-nikolaik

# Debug Configuration
DEBUG=1

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=12000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=12001

# Authentication Configuration (Disabled for development)
DISABLE_AUTH=true
ENABLE_SECURITY=false

# Workspace Configuration
OPENHANDS_WORKSPACE_BASE=./workspace
OPENHANDS_CONFIG_DIR=./.openhands

# Optional: Session API Key (leave empty to disable authentication)
# SESSION_API_KEY=

# Optional: GitHub Integration
# GITHUB_APP_CLIENT_ID=your_github_client_id
# GITHUB_APP_CLIENT_SECRET=your_github_client_secret

# Optional: GitLab Integration  
# GITLAB_CLIENT_ID=your_gitlab_client_id
# GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# Optional: Bitbucket Integration
# BITBUCKET_CLIENT_ID=your_bitbucket_client_id
# BITBUCKET_CLIENT_SECRET=your_bitbucket_client_secret